@page "{id:int?}"
@model RazorPagesMovie.Pages_Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Filmes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id"><button class="btn btn-secondary">Editar</button></a> |
                <a asp-page="./Details" asp-route-id="@item.Id"><button class="btn btn-dark">Detalhes</button></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"><button class="btn btn-danger">Excluir</button></a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-page="Create"><button class="btn btn-primary">Novo Filme</button></a>
</p>
